QLineEdit {
    border-color: black;
    border-width: 2px;
    border-style: solid;
    border-radius: 8px;
    background-color: white;
    color: black;
    font-size: 15px;
    font-family: 微软雅黑;
    text-align: center;
}

QPushButton {
    border: none;
    border-radius: 8px;
    background-color: deepskyblue;
    color: white;
}

QPushButton::hover {
    background-color: rgb(0, 175, 234);
}